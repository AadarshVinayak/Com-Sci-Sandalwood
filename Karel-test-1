/*
 * File: GetNewspaper.java
 * --------------------------------
 */

import stanford.karel.*;

public class GetNewspaper extends Karel {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;

	public void run(){
		findDoor();
		pickUpNewspaper();
		returnToChair();
	}


	/* Pre-conditions : Karel faces any direction
	 * Post-conditions : Karel is facing south beside the doorway
	 */
	private void findDoor(){

		// Karel faces North
		faceNorth();

		// Karel moves to North wall
		moveToWall();

		// Karel moves to East wall
		turnRight();
		moveToWall();

		// Karel finds the door
		turnRight();

		while(leftIsBlocked()){
			move();
		}
	}

	/* Pre-conditions : Karel faces south beside the doorway
	 * Post-conditions : Karel has newspaper (beeper) and facing west
	 */
	private void pickUpNewspaper(){
		turnLeft();
		move();
		pickBeeper();
		turnLeft();
		turnLeft();
	}

	/* Pre-conditions : Karel has newspaper and facing west
	 * Post-conditions : Karel returns to NW corner of house and puts down newspaper (beeper)
	 */
	private void returnToChair(){
		moveToWall();
		turnRight();
		moveToWall();
		turnRight();
		putBeeper();
	}

	/* Pre-conditions : Karel faces any direction
	 * Post-conditions : Karel is facing north
	 */
	private void faceNorth(){
		while(notFacingNorth()){
			turnLeft();
		}
	}

	/* Pre-conditions : Karel faces any direction
	 * Post-conditions : Karel is facing a wall
	 */
	private void moveToWall(){
		while(frontIsClear()){
			move();
		}
	}

	/* Pre-conditions : Karel faces any direction
	 * Post-conditions : Karel turns right
	 */
	private void turnRight(){
		turnLeft();
		turnLeft();
		turnLeft();
	}
}


